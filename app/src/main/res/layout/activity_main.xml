<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CV_Master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CV_contenedor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EBDDFF">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/CV_card_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Tu App de Viaje" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/CV_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="monospace"
                android:gravity="center"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/CV_card_title"
                tools:layout_editor_absoluteX="25dp"
                tools:text="Hola, estamos buscando a millones de usuarios con inquietudes y ganas de viajar. Si eres tu? No lo dudes accede a neutra app y descrubiras miles de destinos y facilidades para alquilar coches, ver el tiempo..." />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/CV_card_image"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/CV_card_subtitle"
                tools:layout_editor_absoluteX="0dp"
                tools:src="@drawable/moto" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CV_card_boton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Next"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/CV_Master"
        android:textColor="@color/white"
        android:background="@drawable/btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>